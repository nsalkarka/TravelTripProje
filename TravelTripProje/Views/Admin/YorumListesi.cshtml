@model List<TravelTripProje.Models.Siniflar.Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        

    </tr>
    @foreach (var item in Model)
    {


        <tr>
            <td>@item.ID</td>
            <td>@item.KullaniciAdi</td>
            <td>@item.Mail</td>
            <td>@item.Yorum</td>
            <td>@item.Blog.Baslik</td>
            <td><a href="/Admin/BlogSil/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/BlogGetir/@item.ID" class="btn btn-warning">Güncelle</a></td>
           

        </tr>
    }
</table>



